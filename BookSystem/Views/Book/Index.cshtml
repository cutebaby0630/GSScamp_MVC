@model BookSystem.Models.BookServiceArg

@{
    ViewBag.Title = "Index";
}

<h2>圖書查詢畫面</h2>

@using (Html.BeginForm("Index", "Book", FormMethod.Post, new { id = "Form1" }))
{
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.BookName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BookName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClassName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ClassName, (List<SelectListItem>)ViewBag.ClassName, "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KeeperName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.KeeperName, (List<SelectListItem>)ViewBag.KeeperName, "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CodeName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CodeName, (List<SelectListItem>)ViewBag.CodeName, "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <input type="submit" class="btn btn-primary" value="查詢" />
                <input type="button" value="清除" class="btn btn-default" onclick="location.href = '/Book/Index'" />
                <input type="button" value="新增" class="btn btn-default" onclick="location.href = '/Book/InsertBook'" />
            </div>
        </div>


        @if (ViewBag.SearchResult != null)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th width="10%">圖書類別</th>
                        <th width="10%">書名</th>
                        <th width="10%">購書日期</th>
                        <th width="10%">借閱狀態</th>
                        <th width="10%">借閱人</th>
                        <td width="5%"></td>
                        <td width="5%"></td>
                        <td width="5%"></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in (List<BookSystem.Models.BookData>)ViewBag.SearchResult)
                    {
                        <tr id='@item.BookId'>
                            <td>@item.ClassName</td>
                            <td>@item.BookName</td>
                            <td>@item.BoughtDate.Replace('-', '/')</td>
                            <td>@item.CodeName</td>
                            <td>@item.KeeperName</td>
                            <td>
                                <input type="button" class="btn btn-default" value="借閱紀錄" />
                                
                            </td>
                            <td>
                                <input type="button" class="btn btn-default" value="編輯" />
                            </td>
                            <td>
                                <input type="button" class="btn btn-danger bt_delete" href="#" value="刪除" />
                                <input class="hidBookId" type="hidden" value='@item.BookId' />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

}
<script type="text/javascript">
    $(document).ready(function () {
        $(".bt_delete").click(function (e) {
            e.preventDefault();
            var r = confirm("確定要刪除嗎?")
            var tr = $(this).closest('tr')
            if (r == true) {
                $.ajax({
                    type: "POST",
                    url: "/Book/DeleteBook",
                    data: "bookId=" + $(this).next().val(),
                    dataType: "json",
                    success: function (response) {
                        $(tr).remove();
                        alert("刪除成功");
                    }, error: function (error) {
                        alert("系統發生錯誤");
                    }
                });
            }
            else {
                return false;
            }
            
        });
    });
</script>
 